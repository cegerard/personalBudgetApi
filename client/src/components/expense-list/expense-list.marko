<table class="highlight centered responsive-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Montant (â‚¬)</th>
      <th>Type</th>
    </tr>
  </thead>
  <tbody>
  <for|expense| of=input.expenseList>
    <tr key=expense.id onclick=`document.location = '/expenses/${expense.id}';`>
        <td>${expense.name}</td>
        <td>${expense.date}</td>
        <td>${expense.amount}</td>
        <td>${expense.type}</td>
        <td>
          <button class="waves-effect waves-light btn-small btn-danger"
                  on-click("delete", "${expense.id}")>
            <i class="material-icons">delete</i>
          </button>
        </td>
    </tr>
  </for>
  </tbody>
</table>
